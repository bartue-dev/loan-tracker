<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/index.css">
  <link rel="stylesheet" href="/general.css">
  <title>Home</title>
</head>

<body>
  <div class="home-container">
    <table>
      <caption>
        <%= title %>
      </caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Phone #</th>
          <th>Loan-amount(Php)</th>
        </tr>
      </thead>
      <tbody>
        <% listPersons.forEach(person=> { %>
          <tr>
            <td>
              <%= person.firstname%>
                <%= person.lastname %>
            </td>
            <td>
              <%= person.address %>
            </td>
            <td>
              <%= person.phone_number %>
            </td>
            <td>
              <div class="last-column">
                <%= person.amount %>
                  <form action="/<%= person.person_id %>/delete" method="POST">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
              </div>

            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <div class="links">
      <a href="/addPerson">add person</a>
      <a href="">search person</a>
    </div>
  </div>
</body>

</html>